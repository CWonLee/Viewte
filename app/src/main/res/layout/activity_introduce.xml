<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.introduce.IntroduceActivity"
    android:orientation="vertical"
    android:background="@color/colorBackgroundDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="61dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/notosans_bold"
                android:text="인터뷰의 기본은\n자기를 먼저 소개하는 것!\n서로 인사 잘 나누셨죠?"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/introduce_cl_1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/theme_category_item"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="109dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="17sp"
                    android:text="나를 먼저 소개하기"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/colorWhite"
                    android:includeFontPadding="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/introduce_cl_2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/theme_category_item"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="17sp"
                    android:text="인터뷰의 목적 설명드리기"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/colorWhite"
                    android:includeFontPadding="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/introduce_cl_3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/theme_category_item"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="17sp"
                    android:text="감사 인사 드리기"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/colorWhite"
                    android:includeFontPadding="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>