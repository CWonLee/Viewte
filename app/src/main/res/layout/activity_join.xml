<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.join.JoinActivity"
    android:background="@color/colorBackgroundDark">

    <TextView
        android:id="@+id/join_tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="43dp"
        android:fontFamily="@font/notosanskr_black"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:text="안녕하세요!\n당신의 이름을 알고 싶어요."/>

    <TextView
        android:id="@+id/join_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/join_tv_hello"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="43dp"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:text="이름을 적어주세요!"
        android:fontFamily="@font/notosanskr_regular"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/join_tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:theme="@style/EditTheme"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>