<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:background="@color/colorGrey2">

    <TextView
        android:id="@+id/custom_dialog_change_user_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:text="프로필 변경"
        android:textSize="17sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_dialog_change_user_cl_photo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@+id/custom_dialog_change_user_tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/theme_white_round">

        <ImageView
            android:id="@+id/custom_dialog_change_user_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/add_photo_alternate_24_px"/>

        <ImageView
            android:id="@+id/custom_dialog_change_user_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cropToPadding="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_dialog_change_user_cl_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:textColor="@color/colorWhite"
        android:textSize="8sp"
        android:text="프로필 이미지"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center"/>

    <EditText
        android:id="@+id/custom_dialog_change_user_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/custom_dialog_change_user_cl_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        android:theme="@style/EditTheme"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:textColor="@color/colorWhite"
        android:hint="이름을 입력해주세요"
        android:inputType="text"/>

    <TextView
        android:id="@+id/custom_dialog_change_user_tv_add"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:textSize="12sp"
        android:text="완료"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/custom_dialog_change_user_tv_cancel"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:textSize="12sp"
        android:text="취소"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/custom_dialog_change_user_tv_add"
        android:gravity="center"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>